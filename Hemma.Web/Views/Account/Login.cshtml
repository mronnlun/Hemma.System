@model Hemma.Web.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Login</h2>

        @Html.ValidationSummary(true)
        <br />
        @using (Html.BeginForm(null, null, new { @class = "form-horizontal", ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Namn" })
                </div>
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Lösenord" })
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <input type="submit" value="Log in" />
        }
    </div>
</div>